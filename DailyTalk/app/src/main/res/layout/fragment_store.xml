<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jina.test4.StoreFragment">

    <!--CalendarView지우면 안됨!!!!!!! 크기 안맞아짐!!!!!!-->
    <CalendarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:text="취소"
                android:layout_weight="1"
                android:id="@+id/frag_store_cancel"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="새로운 이벤트"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:paddingTop="15dp"

                android:layout_weight="2"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="추가"
                android:layout_weight="1"
                android:background="#ffffff"
                android:id="@+id/frag_store_store"
                />

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="제목"
            android:id="@+id/frag_store_title"
            android:maxLength="10"
            android:outlineProvider="background"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="내용"
            android:id="@+id/frag_store_content"
            android:layout_marginTop="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/frag_store_time"
            android:textSize="20dp"
            android:text=""
            android:layout_marginTop="10dp"
            />
        <TimePicker
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:id="@+id/frag_store_timePicker"
            >

        </TimePicker>


    </LinearLayout>
    <!-- TODO: Update blank fragment layout -->


</FrameLayout>
