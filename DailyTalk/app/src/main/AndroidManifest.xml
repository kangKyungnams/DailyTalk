<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="firebase.project.com.messenger">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <activity
            android:name="firebase.project.com.messenger.views.StartActivity"
            android:label="DailyTalk">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="firebase.project.com.messenger.views.LoginActivity"/>
        <activity android:name="firebase.project.com.messenger.views.MainActivity" />
        <activity android:name="firebase.project.com.messenger.views.ChatActivity" />
        <activity android:name="firebase.project.com.messenger.Scehdule.ScheduleActivity" />
        <activity android:name="firebase.project.com.messenger.views.ShareActivity"></activity>
    </application>

</manifest>